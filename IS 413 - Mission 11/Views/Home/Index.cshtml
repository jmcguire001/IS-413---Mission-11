@{
    ViewData["Title"] = "Home Page";
}

<!-- We can pass one model that has lots of stuff in it; we had to use individual model views, though! -->
@model BooksListViewModel

<h1>IS 413 - Mission 11</h1>

@foreach (Book b in Model.Books)
{
    <partial name="BookSummary" model="b" />
}

<div page-model="@Model.PaginationInfo" page-action="Index" page-class-enabled="true" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-class="btn" class="btn-group pull-right m-1"></div>