<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Changed the name of the tab title -->
        <title>@ViewData["Title"] - Bookstore.</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/IS_413___Mission_11.styles.css" asp-append-version="true" />
    </head>

    <!-- Made some styling changes to the body (specifically the header) -->
    <body>
        <div class="bg-dark text-white p-2">
            <span class="navbar-brand m-lg-2">Bookstore.</span>
        </div>

        <div class="row m-1 p-1">
            <div class="col-3">A simple website for great books.</div>
        </div>

        <div class="container col-9">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Create the footer -->
        <footer class="border-top footer text-muted" style="display: flex; justify-content: space-between; align-items: center;">
            <div style="flex: 1;">
                <!-- This is the copyright stuff, and it is also a link to the home page -->
                <a style="color: inherit; cursor: pointer; text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Index">&copy; 2024 | Bookstore.</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
